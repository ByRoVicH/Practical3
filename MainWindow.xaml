<Window x:Class="Practical3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 3" Height="350" Width="500" Icon="/joke-svgrepo-com.png">
    <Grid>
        <Menu>
            <MenuItem Header="Меню">
                <MenuItem Header="О программе" Click="About_Click"/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите размер матрицы (M x N):"/>
            <TextBox x:Name="textBoxM" Width="50" Margin="5"/>
            <TextBox x:Name="textBoxN" Width="50" Margin="5"/>
            <Button Content="Сгенерировать" Click="Generate_Click" Margin="5"/>
            <TextBlock x:Name="resultText" Text=""/>
            <TextBlock x:Name="matrixText" Text=""/>
        </StackPanel>
    </Grid>
</Window>
